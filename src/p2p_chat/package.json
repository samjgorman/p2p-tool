{
  "name": "P2P-Chat",
  "productName": "P2P-Chat",
  "version": "1.0.0",
  "description": "A peer to peer chat demo.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "tsc && mocha dist/test/**/*.js"
  },
  "keywords": [],
  "author": {
    "name": "samjgorman",
    "email": "samjgorman@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "protocols": {
        "name": "p2p",
        "schemes": [
          "p2p"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "my_new_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "port": "3001",
            "loggerPort": "9001",
            "mainConfig": "./webpack/webpack.main.config.js",
            "renderer": {
              "config": "./webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/client/public/index.html",
                  "js": "./src/client/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/server/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/simple-peer": "^9.11.4",
    "@types/styled-components": "^5.1.21",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "chai": "^4.3.6",
    "css-loader": "^6.6.0",
    "electron": "17.0.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "mocha": "^9.2.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.11",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^10.0.0",
    "node-pre-gyp": "^0.17.0",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "signalhub": "^4.9.0",
    "simple-peer": "^9.11.0",
    "sodium-native": "^3.3.0",
    "styled-components": "^5.3.3",
    "wrtc": "^0.4.7"
  }
}
